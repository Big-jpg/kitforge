# KitForge Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/kitforge

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output

# Material Defaults
DEFAULT_MATERIAL_DENSITY=1.24  # PLA in g/cm3
DEFAULT_COST_PER_GRAM=0.02     # USD per gram

# Print Time Estimation (cm3/hour)
FDM_PRINT_SPEED=20.0

# Freemium Limits
FREE_TIER_CARDS_PER_MONTH=5
